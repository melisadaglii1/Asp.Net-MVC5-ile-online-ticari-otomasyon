@using mvconlineotomasyon.Models.sınıflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    
    @foreach (var k in Model)
    {
<tr>
    <td>@k.Personelid</td>
    <td>@k.PersonelAd</td>
    <td>@k.PersonelSoyad</td>
    <td>
        <img src="@k.PersonelGorsel" style="width:200px; height:150px;" />

    </td>
    <td>@k.Departman.DepartmanAd</td>
    <td><a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-success" style="background-color:coral">Detaylar</a></td>
</tr>}

</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>



